<?xml version="1.0" encoding="UTF-8"?>

<root>
	<!-- STEP 0 - define libraries used / id from resources.xml -->
	<libraries>
		<library id="gameclientCommonUI"/>
	</libraries>
	
							 
	<!-- STEP 1 - define common used TEXTSTYLES -->
	<textstyle name            = "commonui_tooltip_textstyle" 
			   border          = "true" 
			   borderColor     = "0x2E84A5"  
			   textColor       = "0xFFFFFF" 
			   embedFonts      = "false" 
			   selectable      = "false"
			   autoSize        = "LEFT"
			   background      = "true" 
			   backgroundColor = "0x000000" 
			   fontName        = "Tahoma"
			   fontSize        = "12"
			   />
	
	<!-- STEP 2 - define common used SKINS -->
	<skins>

	<!-- hitlayer, debug layers -->
		<skin name="commonui_hitlayer" classname="BasicSkin" library="hintSystemUI">
			<layer classname="FilledBoxLayer"  fillColor="0xFFFFFF" fillAlpha="1"  >normal</layer>
		</skin>
		<skin name="commonui_darklayer" classname="BasicSkin" library="hintSystemUI">
			<layer classname="FilledBoxLayer"  fillColor="0x000000" fillAlpha="0.5"  >normal</layer>
		</skin>
		<skin name="debug_edges" library="gameclientCommonUI" classname="BasicSkin">
			<layer classname="BitmapLayer" libraryID="debug_edges" scale9grid="2,2,3,3" >normal</layer>
		</skin>
		<skin name="debug_edges_input" library="gameclientCommonUI" classname="InputSkin">
			<layer classname="BitmapLayer" libraryID="debug_edges" scale9grid="2,2,3,3" >normal</layer>
		</skin>
			
	<!-- buttons, confirmation -->
			
	<!-- check boxes -->
		<skin name="commonui_checkbox18x19" library="gameclientCommonUI" classname="CheckBoxSkin">
			<layer classname="BitmapLayer" libraryID="checkbox18x19_normal_selected"   >normal.selected</layer>
			<layer classname="BitmapLayer" libraryID="checkbox18x19_normal_unselected" >normal</layer>
			<layer classname="BitmapLayer" libraryID="checkbox18x19_over_selected"     >over.selected</layer>
			<layer classname="BitmapLayer" libraryID="checkbox18x19_over_unselected"   >over</layer>
		</skin>
		<skin name="commonui_checkbox16x16_blue" library="gameclientCommonUI" classname="CheckBoxSkin">
			<layer classname="BitmapLayer" libraryID="checkbox16x16_blue_normal_selected"   >normal.selected</layer>
			<layer classname="BitmapLayer" libraryID="checkbox16x16_blue_normal_unselected" >normal</layer>
			<layer classname="BitmapLayer" libraryID="checkbox16x16_blue_over_selected"     >over.selected</layer>
			<layer classname="BitmapLayer" libraryID="checkbox16x16_blue_over_unselected"   >over</layer>
		</skin>
		
	<!-- input -->
		<skin name="commonui_input_blue" library="gameclientCommonUI" classname="InputSkin">
			<layer classname="BitmapLayer" libraryID="input_background_blue"   scale9grid="4,4,6,5" >normal</layer>
		</skin>
		
		
	<!-- confirmation buttons -->
		<skin name="commonui_confirmationbutton_green" library="gameclientCommonUI" classname="FadableButtonSkin" >
			<layer classname="BitmapLayer" libraryID="confirmation_button_green_normal"  scale9grid="22,24,140,40" >normal</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_green_over"    scale9grid="22,24,140,40" >over</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_green_clicked" scale9grid="22,24,140,40" >clicked</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_disabled"      scale9grid="22,24,140,40" >disabled</layer>
		</skin>
		
		<skin name="commonui_confirmationbutton_blue" library="gameclientCommonUI" classname="FadableButtonSkin" >
			<layer classname="BitmapLayer" libraryID="confirmation_button_blue_normal"  scale9grid="22,24,140,40" >normal</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_blue_over"    scale9grid="22,24,140,40" >over</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_blue_clicked" scale9grid="22,24,140,40" >clicked</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_disabled"     scale9grid="22,24,140,40" >disabled</layer>
		</skin>
		
		<skin name="commonui_confirmationbutton_red" library="gameclientCommonUI" classname="FadableButtonSkin" >
			<layer classname="BitmapLayer" libraryID="confirmation_button_red_normal"  scale9grid="22,24,140,40" >normal</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_red_over"    scale9grid="22,24,140,40" >over</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_red_clicked" scale9grid="22,24,140,40" >clicked</layer>
			<layer classname="BitmapLayer" libraryID="confirmation_button_disabled"    scale9grid="22,24,140,40" >disabled</layer>
		</skin>
		
	
	
	<!-- toggle button -->
		<skin name="commonui_togglebutton_dark" library="gameclientCommonUI" classname="ToggleButtonSkin">
			<layer classname="BitmapLayer" libraryID="togglebutton_dark_background"   scale9grid="8,8,25,9" >background</layer>
			<layer classname="BitmapLayer" libraryID="togglebutton_dark_switch_normal" >normal</layer>
			<layer classname="BitmapLayer" libraryID="togglebutton_dark_switch_over" >over</layer>
		</skin>
			
		
	<!-- scroll components (scrollbar, scrollcontainer, ...) related skins -->
		<skin name="commonui_scrollbar_bgnd" classname="FadableButtonSkin" library="hintSystemUI">
			<layer classname="FilledBoxLayer"  fillColor="0x13323E" fillAlpha="0.45"  >normal</layer>
		</skin>
		
		<skin name="commonui_scrollbar_slider" classname="FadableButtonSkin" library="hintSystemUI">
			<layer classname="FilledBoxLayer"  fillColor="0x358BAC" fillAlpha="0.45" >normal</layer>
			<layer classname="FilledBoxLayer"  fillColor="0x358BAC" fillAlpha="1"    >over</layer>
			<layer classname="FilledBoxLayer"  fillColor="0x358BAC" fillAlpha="0.7"  >clicked</layer>
		</skin>
		
		<skin name="commonui_tooltip_label" classname="LabelSkin"    library="contactsWindowUI" />
	</skins>
	
	<!-- STEP 3 - define common used TOOLTIPS -->
	<tooltips>
		<tooltip name="commonui_tooltip_simple">
			<template>
				<coreponent  name="background" registeredSkinName="debug_edges" width="4" height="4" x="0" y="0" />
				<label       name="label"      autoSize="true" text="tooltip" registeredSkinName="commonui_tooltip_label" registeredTextStyleName="commonui_tooltip_textstyle"/>
			</template>
		</tooltip>
		<!-- an example for a more complex tooltip
		<tooltip tooltipTemplateID="commonui_tooltip_complex">
			<template>
				<label       name="label"                    x="4" text="tooltip" registeredSkinName="contactlist_label" registeredTextStyleName="selectedUsernameTextStyle"/>
				<coreponent  name="statusIcon_buddy_offline" x="10" registeredSkinName="contactlist_window_buddy_offline" mouseEnabled="true" mouseChildren="true" />
				<button      name="button_remove_contact"    alignX="right" marginRight="0"  registeredSkinName="contactlist_window_remove_button" />
			</template>
		</tooltip>
		-->
	</tooltips>
	
	<!-- STEP 4 - define common used template structures -->
	<template name="commonui.window.inProgressOverlay">
		<root>
			<coreponent name="darkLayer" marginLeft="4" marginRight="4" marginBottom="4" autoSizeWidth="true" autoSizeHeight="true" registeredSkinName="commonui_darklayer" />
			<coreponent name="cogBigContainer" alignY="center" alignX="center" x="-20" y="-30" alpha="0" mouseEnabled = "false" mouseChildren="false" >
				<movieclip name="cogBig" library="gameclientCommonUI" libraryID="cog_big" />
			</coreponent>
			<coreponent name="cogSmallContainer" alignY="center" alignX="center" x="27" y="27" alpha="0" mouseEnabled = "false" mouseChildren="false" >
				<movieclip name="cogSmall" library="gameclientCommonUI" libraryID="cog_small" />
			</coreponent>
		</root>
	</template>
	
	<!-- 
	<mousecursor cursorID="mousecursor"       library="gameclientCommonUI" libraryID="mousecursor"      offsetX="0" offsetY="0" />
	<mousecursor cursorID="mousecursor_drag"  library="gameclientCommonUI" libraryID="mousecursor_drag" offsetX="5" offsetY="5" />
	 -->
	
</root>