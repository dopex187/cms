<?xml version="1.0" encoding="UTF-8"?>

<root>
	<!-- STEP 0 - define libraries used / id from resources.xml -->
	<libraries>
		<library id="gameclientCommonUI"/>
		<library id="traininggroundsUI"/>
	</libraries>
	
	<textstyle 	name           = "traininggrounds_whiteTextStyle" 
				textColor      = "0xFFFFFF" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "EurostileT"
				align		   = "center"
				multiline	   = "true"
				wordWrap	   = "true"
				/>
	<textstyle 	name           = "traininggrounds_whiteTextStyleLarge" 
				textColor      = "0xFFFFFF" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "EurostileT"
				align		   = "center"
				fontSize	   = "16"
				/>
	<textstyle 	name           = "traininggrounds_whiteTextStyleButton" 
				textColor      = "0xFFFFFF" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "EurostileTHea"
				align		   = "center"
				fontSize	   = "18"
				/>
	<textstyle 	name           = "traininggrounds_whiteTextStyleRound" 
				textColor      = "0xFFFFFF" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "EurostileTHea"
				align		   = "center"
				fontSize	   = "24"
				/>
	<textstyle 	name           = "traininggrounds_whiteTextStyleAutoSize" 
				textColor      = "0xFFFFFF" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "Tahoma"
				embedFonts	   = "false"
				align		   = "left"
				autoSize	   = "left"
				/>
	<textstyle 	name           = "traininggrounds_hpTextStyle" 
				textColor      = "0xFFFFFF" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "EurostileT"
				align		   = "center"
				background     = "true" 
				backgroundColor= "0x00AA00"
				border     	   = "true" 
				borderColor    = "0x00FF00" 
				fontSize	   = "9"
				/>
	<textstyle 	name           = "traininggrounds_shieldTextStyle" 
				textColor      = "0xFFFFFF" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "EurostileT"
				align		   = "center"
				background     = "true" 
				backgroundColor= "0x004488"
				border     	   = "true" 
				borderColor    = "0x0088FF"  
				fontSize	   = "9"
				/>
	<textstyle 	name           = "traininggrounds_smallDescriptionTextStyle" 
				textColor      = "0xFFFFFF" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "EurostileT"
				align		   = "center"
				fontSize	   = "10"
				multiline	   = "true"
				wordWrap	   = "true"
				/>
	<textstyle 	name           = "traininggrounds_buttonTextStyle" 
				textColor      = "0x000000" 
				type           = "dynamic" 
				selectable     = "false" 
				fontName       = "EurostileT"
				background     = "true" 
				backgroundColor= "0xFFFFFF" 
				border     	   = "true" 
				borderColor    = "0x000000" 
				align		   = "center"
				/>
	<skins>
		<skin name="traininggrounds_label" classname="LabelSkin" library="gameclientCommonUI"/>	
		<skin name="traininggrounds_label_button_green" classname="FadableButtonSkin" library="traininggroundsUI" >
			<layer classname="BitmapLayer" libraryID="btn_green_normal"  scale9grid="22,24,140,40" >normal</layer>
			<layer classname="BitmapLayer" libraryID="btn_green_hover"    scale9grid="22,24,140,40" >over</layer>
			<layer classname="BitmapLayer" libraryID="btn_inactive" scale9grid="22,24,140,40" >disabled</layer>
		</skin>	
		<skin name="traininggrounds_label_button_red" classname="FadableButtonSkin" library="traininggroundsUI" >
			<layer classname="BitmapLayer" libraryID="btn_red_normal"  scale9grid="22,24,140,40" >normal</layer>
			<layer classname="BitmapLayer" libraryID="btn_red_hover"    scale9grid="22,24,140,40" >over</layer>
			<layer classname="BitmapLayer" libraryID="btn_inactive" scale9grid="22,24,140,40" >disabled</layer>
		</skin>	
		<skin name="traininggrounds_label_button_blue" classname="FadableButtonSkin" library="traininggroundsUI" >
			<layer classname="BitmapLayer" libraryID="btn_blue_normal"  scale9grid="22,24,140,40" >normal</layer>
			<layer classname="BitmapLayer" libraryID="btn_blue_hover"    scale9grid="22,24,140,40" >over</layer>
			<layer classname="BitmapLayer" libraryID="btn_inactive" scale9grid="22,24,140,40" >disabled</layer>
		</skin>	
		<skin name="traininggrounds_window_horizontal_divider" library="gameclientCommonUI" classname="BasicSkin">
			<layer classname="BitmapLayer" libraryID="horizontal_divider"   >normal</layer>
		</skin>
		<skin name="traininggrounds_window_info_icon" library="traininggroundsUI" classname="BasicSkin">
			<layer classname="BitmapLayer" libraryID="info_icon"   >normal</layer>
		</skin>
		<skin name="traininggrounds_window_heroPicFrame" library="traininggroundsUI" classname="BasicSkin">
			<layer classname="BitmapLayer" libraryID="pic_frame_player" >normal</layer>
		</skin>
		<skin name="traininggrounds_window_oppoPicFrame" library="traininggroundsUI" classname="BasicSkin">
			<layer classname="BitmapLayer" libraryID="pic_frame_opponent" >normal</layer>
		</skin>
		<skin name="traininggrounds_window_barsAndRoundBg" library="traininggroundsUI" classname="BasicSkin">
			<layer classname="BitmapLayer" libraryID="barsAndRoundBg" >normal</layer>
		</skin>
		<skin name="traininggrounds_window_greenBar" library="traininggroundsUI" classname="BasicSkin">
			<layer classname="BitmapLayer" libraryID="greenBar" >normal</layer>
		</skin>
		<skin name="traininggrounds_window_blueBar" library="traininggroundsUI" classname="BasicSkin">
			<layer classname="BitmapLayer" libraryID="blueBar" >normal</layer>
		</skin>
		<skin name="traininggrounds_victorypoint_checkbox9x8" library="traininggroundsUI" classname="CheckBoxSkin">
			<layer classname="BitmapLayer" libraryID="point_on"   >normal.selected</layer>
			<layer classname="BitmapLayer" libraryID="point_off" >normal</layer>
			<layer classname="BitmapLayer" libraryID="point_on"     >over.selected</layer>
			<layer classname="BitmapLayer" libraryID="point_off"   >over</layer>
		</skin>
	</skins>
	
	<container
		name   	= "windowContentContainer"
		width  	= "320"
		height 	= "400"
		x		= "10"
		mouseEnabled = "false"
		>
		<container
			name           = "tgDisabledStageContainer"
			width		   = "320"
			height		   = "340"
			mouseEnabled   = "false"
			visible		   = "false"
			>
			<label name="disabledReasonLabel" alignX="center" marginTop="191" width="300" text="TA disabled. REPLACE ME" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyle"/>
		</container>
		<container
			name           = "initialStageContainer"
			width		   = "320"
			height		   = "320"
			mouseEnabled   = "false"
			visible		   = "true"
			>
			<label name="yourVictoriesLabel" alignX="center" marginTop="51" autoSizeWidth="true" height="20" text="" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyle"/>
			<label name="battlesPlayedLabel" alignX="center" marginTop="71" autoSizeWidth="true" height="20" text="" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyle"/>
			<button name="confirmationButton" width="220"  height="62" marginTop="121" alignX="center" localizedText="btn_traininggrounds_join_queue" registeredSkinName="traininggrounds_label_button_green" registeredTextStyleName="traininggrounds_whiteTextStyleButton"/>
			<coreponent name="horizontalDivider" marginTop="190" autoSizeWidth="true" marginLeft="22" marginRight="20" registeredSkinName="traininggrounds_window_horizontal_divider" />
			<coreponent name="infoIcon" marginTop="200" marginLeft="10" registeredSkinName="traininggrounds_window_info_icon" />
			<label name="funnyDescription" alignX="left" marginTop="220" autoSizeWidth="true" useHTML="true" height="100" localizedText="label_traininggrounds_general_desc" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_smallDescriptionTextStyle"/>
			
		</container>
		<container
			name           = "searchingStageContainer"
			width		   = "320"
			height		   = "340"
			mouseEnabled   = "false"
			visible		   = "false"
			>
			<label name="lookingForOpponentLabel" alignX="center" marginTop="41" autoSizeWidth="true" height="20" localizedText="label_traininggrounds_looking_for_opponent" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyleLarge"/>
			<label name="funnyLFODescription" alignX="left" marginTop="75" width = "320" localizedText="label_traininggrounds_looking_for_opponent_desc" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_smallDescriptionTextStyle"/>
			<movieclip name="cogs" x="145" y="176" library="gameclientCommonUI" libraryID="AnimatedCogs" />
			<button name="cancelButton" width="220"  height="62" marginTop="256" alignX="center" localizedText="btn_traininggrounds_cancel" registeredSkinName="traininggrounds_label_button_blue" registeredTextStyleName="traininggrounds_whiteTextStyleButton"/>
		</container>
		<container
			name           = "opponentFoundStageContainer"
			width		   = "320"
			height		   = "340"
			mouseEnabled   = "false"
			visible		   = "false"
			>
			<label name="opponentFoundLabel" alignX="center" marginTop="41" autoSizeWidth="true" height="20" localizedText="label_traininggrounds_opponent_found" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyleLarge"/>
			<button name="fightButton" width="220"  height="62" marginTop="61" alignX="center" localizedText="btn_traininggrounds_fight" registeredSkinName="traininggrounds_label_button_green" registeredTextStyleName="traininggrounds_whiteTextStyleButton"/>
			<movieclip name="hourglas" x="160" y="170" library="traininggroundsUI" libraryID="animatedHourglas" />
			<label name="countdownLabel" alignX="center" marginTop="211" autoSizeWidth="true" height="20" text="0:40" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyle"/>
			<label name="ownStatusLabel" alignX="center" marginTop="231" width = "320" text="own status information" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyle"/>
			<button name="cancelButton" width="220"  height="62" marginTop="271" alignX="center" localizedText="btn_traininggrounds_cancel" registeredSkinName="traininggrounds_label_button_blue" registeredTextStyleName="traininggrounds_whiteTextStyleButton"/>	
		</container>
		<container
			name           = "waitingForOpponentStageContainer"
			width		   = "320"
			height		   = "340"
			mouseEnabled   = "false"
			visible		   = "false"
			>
			<label name="waitingForOpponentLabel" alignX="center" marginTop="41" autoSizeWidth="true" height="20" localizedText="label_traininggrounds_waiting_for_opponent_desc" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyleLarge"/>
			
			<movieclip name="hourglas" x="160" y="170" library="traininggroundsUI" libraryID="animatedHourglas" />
			<label name="countdownLabel" alignX="center" marginTop="211" autoSizeWidth="true" height="20" text="0:40" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyle"/>
		</container>
		<container
			name           = "fightingStageContainer"
			width		   = "460"
			height		   = "100"
			y			   = "10"
			
			mouseEnabled   = "false"
			visible		   = "false"
			>
			
			<movieclip name="heroPic" y="28" x="8"/>
			<movieclip name="oppoPic" y="28" x="390"/>
			<coreponent name="heroPicFrame" y="26" x="6" width="64" height="64" registeredSkinName="traininggrounds_window_heroPicFrame" />
			<coreponent name="oppoPicFrame" y="26" x="388" width="64" height="64" registeredSkinName="traininggrounds_window_oppoPicFrame" />			
			<coreponent name="barsAndRoundBg" x="74" y="40" registeredSkinName="traininggrounds_window_barsAndRoundBg" />
			<coreponent name="ownHPBar" marginLeft="75" marginTop="53" registeredSkinName="traininggrounds_window_greenBar" />
			<coreponent name="opponentHPBar" alignX="right" marginRight="77" marginTop="53" registeredSkinName="traininggrounds_window_greenBar" library="traininggroundsUI" libraryID="greenBar" />
			<coreponent name="ownShieldBar" marginLeft="75" marginTop="59" registeredSkinName="traininggrounds_window_blueBar" library="traininggroundsUI" libraryID="blueBar" />
			<coreponent name="opponentShieldBar" alignX="right" marginRight="77" marginTop="59" registeredSkinName="traininggrounds_window_blueBar" library="traininggroundsUI" libraryID="blueBar" />
			
			<label name="ownNameLabel" marginLeft="72" marginTop="31" alpha="0.7" height="14" text="" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyleAutoSize" />
			<label name="opponentNameLabel" alignX="right" marginRight="75" marginTop="31" alpha="0.7" height="14" text="" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyleAutoSize" />
			
			<checkbox name="round1WonOwn" enabled="true" width="9" height="8" marginLeft="74" marginTop="79" selection="false" registeredSkinName="traininggrounds_victorypoint_checkbox9x8" />
			<checkbox name="round2WonOwn" enabled="true" width="9" height="8" marginLeft="85" marginTop="79" selection="false" registeredSkinName="traininggrounds_victorypoint_checkbox9x8" />
			<checkbox name="round1WonOpponent" enabled="true" width="9" height="8" alignX="right" marginRight="87" marginTop="79" selection="false" registeredSkinName="traininggrounds_victorypoint_checkbox9x8" />
			<checkbox name="round2WonOpponent" enabled="true" width="9" height="8" alignX="right" marginRight="76" marginTop="79" selection="false" registeredSkinName="traininggrounds_victorypoint_checkbox9x8" />
			<label name="roundNumberLabel" marginLeft="178" marginTop="42" height="40" text="1" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyleRound" />
			<label name="countdownLabel" marginLeft="178" marginTop="79" height="40" text="5:00" registeredSkinName="traininggrounds_label" registeredTextStyleName="traininggrounds_whiteTextStyle" />
		</container>
	</container>
</root>