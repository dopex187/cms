<root>
	<window>
		<template name="HintSystem.confirmationLayerGalaxyGates">
			<container name="confirmationContainer" template="HintSystem.confirmationLayerWithButtonAndExternalLinkTemplate">
				<button name="confirmationButton01" registeredSkinName="hintsystem_button_confirmation_blue" text="localize:targeted_hintwindow_button_galaxygates_open_extraenergy" />
				<button name="confirmationButton02" registeredSkinName="hintsystem_button_confirmation_green" text="localize:targeted_hintwindow_button_galaxygates_open_galaxygate" />	
			</container>
		</template>
		
		<container template="baseWindow">
			<placeholder 
				name     ="confirmationLayerPlaceholder"
				template ="HintSystem.confirmationLayerGalaxyGates" 
				/>
		</container>
	</window>
	
	<playlist repeat="false" >
		<item resKey="hint-system_image_galaxygates" effect="alphafade" fadeTime="1" duration="3000" />
	</playlist>
	
</root>